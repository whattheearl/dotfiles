#! /usr/bin/env bash

function run() {
    tid up -d;
    tidm wait-for-docker-up;
    new-tab npm run -C ~/tyl/tcp-admincenter/mfe-workspace/ start:shell
    new-tab npm run -C ~/tyl/tcp-admincenter/mfe-workspace/ start:config-remote
    new-tab npm run -C ~/tyl/tcp-admincenter/mfe-workspace/ start:um-remote
    new-tab npm run -C ~/tyl/tcp-admincenter/mfe-workspace/ start:dashboard-remote
    new-tab dotnet run --project ~/tyl/tcp-admincenter/tcp-admincenter-user-management/tcp-admincenter-user-management/tcp-admincenter-user-management.csproj
    new-tab dotnet run --project ~/tyl/tcp-admincenter/tcp-admincenter-dashboard/tcp-admincenter-dashboard/tcp-admincenter-dashboard.csproj
    new-tab dotnet run --project ~/tyl/tcp-admincenter/tcp-admincenter-configuration/tcp-admincenter-configuration/tcp-admincenter-configuration.csproj
    new-tab dotnet run --project ~/tyl/tcp-admincenter/shell/tcp-admincenter/tcp-admincenter.csproj
}

function new-tab() { wezterm cli spawn -- $@ }

